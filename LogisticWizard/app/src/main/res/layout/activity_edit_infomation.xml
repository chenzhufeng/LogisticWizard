<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/PhotoHolder"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:textAlignment="center"
            android:text="Photo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Name:" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of this machine"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Type:" />

        <EditText
            android:id="@+id/typeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parts of this machine"
            android:inputType="textPersonName"/>

        <TextView
            android:id="@+id/parts"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Parts:" />

        <EditText
            android:id="@+id/partsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parts of this machine"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Price:" />

        <EditText
            android:id="@+id/priceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price of this machine"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Location:" />

        <EditText
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location of this machine"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/quantityofMachine"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Quantity:" />

        <Spinner
            android:id="@+id/quantitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of this machine"
            android:inputType="textPersonName"/>


        <TextView
            android:id="@+id/maintenancePlan"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="MaintenancePlan:" />

        <Spinner
            android:id="@+id/maintenancePlanSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of this machine"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Description:" />

        <EditText
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:hint="Description of this machine"
            android:inputType="textPersonName" />
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"/>
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"/>

        <TextView
            android:id="@+id/placeHolder"
            android:layout_width="match_parent"
            android:layout_height="100dp" />


    </LinearLayout>
</ScrollView>